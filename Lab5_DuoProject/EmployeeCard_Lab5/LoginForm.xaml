<UserControl x:Class="EmployeeCard_Lab5.LoginForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmployeeCard_Lab5"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="210">
    <Grid Background="White" Margin="0,0,0,0">
        <Label Content="Логин: " Width="55" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="Пароль: " Width="55" Margin="10,41,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="LoginTxt" Text="" Height="26" Width="130" Margin="70,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" TextChanged="LoginTxt_TextChanged"/>
        <TextBox x:Name="PasswordTxt" Text="" Height="26" Width="130" Margin="70,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" TextChanged="PasswordTxt_TextChanged"/>
        <Button x:Name="OKButton" Content="OK" HorizontalAlignment="Left" Margin="70,80,0,0" VerticalAlignment="Top" Width="75" Click="OKButton_Click"/>
    </Grid>
</UserControl>
